<%= form_for(@code_help) do |f| %>
  <% if @code_help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@code_help.errors.count, "error") %> prohibited this code_help from being saved:</h2>

      <ul>
      <% @code_help.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="form">
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :language %><br />
    <%= f.text_field :language %>
  </div>
  <div class="field">
    <%= f.label :platform %><br />
    <%= f.text_field :platform %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :descriptor %><br />
    <%= f.text_field :descriptor %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>
