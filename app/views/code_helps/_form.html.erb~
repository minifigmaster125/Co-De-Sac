<%= form_for(@code_help) do |f| %>
  <% if @code_help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@code_help.errors.count, "error") %> prohibited this code_help from being saved:</h2>

      <ul>
      <% @code_help.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%#= f.label :title %><br />
    <%= f.text_field :title, :placeholder => "Title?", :size => 36  %>
  </div>
  <div class="field">
    <%#= f.label :language %><br />
    <%= f.text_field :language, :placeholder => "Language Used", :size => 36  %>
  </div>
  <div class="field">
    <%#= f.label :platform %><br />
    <%= f.text_field :platform, :placeholder => "Platform Used", :size => 36  %>
  </div>
  <div class="field">
    <%#= f.label :content %><br />
    <%= f.text_field :content, :placeholder => "What you have to say", :size => 36  %>
  </div>
  <!--div class="field"-->
    <%#= f.label :date %><br />
    <%= f.hidden_field :date %>
  <!--/div-->
  <div class="field">
    <%#= f.label :descriptor %>
    <%= f.text_field :descriptor, :placeholder => "What is it? (gotcha, how-to, fix, e.g.)", :size => 36 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
